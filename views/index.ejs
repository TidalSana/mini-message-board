<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="main">
      <div class="title">
        <h1><%= title %></h1>
        <p>Welcome to the <%= title %></p>
        <a class="btn button" href="/new">Create a new message</a>
      </div>
      <ul>
        <% messages.forEach((message) => { %>
        <li>
          <div class="message-div">
            <h4><%= message.user %></h4>
            <p>> <%= message.text %></p>
            <h5><%= message.added %></h5>
          </div>
        </li>
        <%}); %>
      </ul>
    </div>
  </body>
</html>
